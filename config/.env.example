# Application Settings
APP_NAME=Renewable DD Tool
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
SESSION_TIMEOUT_MINUTES=15

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/renewable_dd
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=config/google_credentials.json

# Google Drive API
GOOGLE_DRIVE_API_VERSION=v3
GOOGLE_DRIVE_ROOT_FOLDER=DD-Projects

# Google Cloud KMS
GCP_KMS_KEY_RING=renewable-dd-keyring
GCP_KMS_CRYPTO_KEY=document-encryption-key
GCP_KMS_LOCATION=us-central1

# OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Security Settings
ENCRYPTION_ALGORITHM=AES-256-GCM
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Data Retention
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
SESSION_DATA_RETENTION_HOURS=24
TEMP_FILE_RETENTION_MINUTES=5

# Document Processing
MAX_DOCUMENT_SIZE_MB=100
SUPPORTED_FORMATS=pdf,docx,xlsx,doc,xls,txt,csv
PROCESSING_QUEUE_NAME=document-processing
MAX_CONCURRENT_PROCESSING=10

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
EMBEDDING_MODEL=text-embedding-3-large
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Database
VECTOR_DB_TYPE=pinecone  # or chromadb, weaviate
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=renewable-dd-documents

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=logs/audit.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_ADDRESS=noreply@renewable-dd-tool.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Document Classification Confidence Threshold
MIN_CLASSIFICATION_CONFIDENCE=0.75
MIN_EXTRACTION_CONFIDENCE=0.70

# Renewable Energy Specific
DEFAULT_CAPACITY_FACTOR_SOLAR=0.25
DEFAULT_CAPACITY_FACTOR_WIND=0.35
DEFAULT_CAPACITY_FACTOR_HYDRO=0.45
MERCHANT_TAIL_DISCOUNT_RATE=0.08
